            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="9dp"
            android:src="@drawable/ic_drop_down"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
