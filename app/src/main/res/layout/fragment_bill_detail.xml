                    <EditText
                        android:id="@+id/edt_percent_tax"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:imeOptions="actionDone"
                        android:maxLength="7"
                        android:inputType="number"
                        android:paddingStart="11dp"
