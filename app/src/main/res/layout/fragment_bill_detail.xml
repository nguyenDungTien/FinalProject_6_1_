            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_input_tax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txt_tax_v1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/Enter_taxes"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setStyleText="Roboto_Regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/todo_bat_buoc"
                    android:textColor="@color/color_EE0033"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_tax_v1"
                    app:layout_constraintStart_toEndOf="@+id/txt_tax_v1"
                    app:layout_constraintTop_toTopOf="@+id/txt_tax_v1" />

                <RelativeLayout
                    android:layout_width="0dp"
